{
  "extends": "@mercari-scraper/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./*"] },
    // TODO: Temporarily disable declaration files until we figure out a solution for Next.js
    "declaration": false,
    "declarationMap": false,
    "composite": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
